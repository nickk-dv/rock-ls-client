{
  "include": [
    "./src"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": [ "ES2022" ],
    "outDir": "./dist",

    "strict": true,
    "noEmitOnError": true,
    "removeComments": true,
    "allowJs": false,
    "sourceMap": false,

    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
  },
}